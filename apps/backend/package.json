    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-typescript": "3.6.3",
    "eslint-plugin-import": "2.30.0",
    "eslint-plugin-prettier": "5.2.1",
    "husky": "9.1.6",
    "lint-staged": "15.2.10",
    "prettier": "3.3.3",
    "semantic-release": "24.1.1",
    "shx": "0.3.4",
    "tsup": "8.3.0",
    "tsx": "4.19.1",
    "typescript": "5.6.2"
